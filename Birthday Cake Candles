#include<bits/stdc++.h>
using namespace std;
int main()
{

      long int high=0,sum=0;
      int n;
      cin>>n;
      int arr[n];
      
      for(int i=0;i<n;i++)
      {
         cin>>arr[i];
      }
      
      for(int i=0;i<n;i++)
      {
         if(arr[i]>high)
         {
            high=arr[i];
         }
      }

for(int i=0;i<n;i++)
{
   if(arr[i]==high)
   {
      sum++;
   }
}
cout<<sum;


   
}
